<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_edit_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="30dp"
        android:text="Player: " />

    <TextView
        android:id="@+id/show_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="192dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/show_solar_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="183dp"
        android:layout_marginTop="254dp" />

    <TextView
        android:id="@+id/text_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="74dp"
        android:text="Difficulty" />

    <TextView
        android:id="@+id/show_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="191dp"
        android:layout_marginTop="76dp"
        android:text="1" />

    <TextView
        android:id="@+id/show_skillPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="119dp"
        android:text="Skill Points (TOTAL 16)" />

    <LinearLayout
        android:id="@+id/skill_names"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/show_skillPoints"
        android:orientation="horizontal">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    <LinearLayout
        android:id="@+id/pilot_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/pilot_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PILOT" />
        <TextView
            android:id="@+id/text_pPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
    </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    <LinearLayout
        android:id="@+id/fighter_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/fighter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIGHTER" />
        <TextView
            android:id="@+id/text_fPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
    </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <LinearLayout
            android:id="@+id/trader_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/trader_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRADER" />
            <TextView
                android:id="@+id/text_tPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/engineer_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/engineer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENGINEER" />
            <TextView
                android:id="@+id/text_ePoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_solar_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="252dp"
        android:layout_below="@id/skill_names"
        android:text="Solar System:" />

    <Button
        android:id="@+id/Market_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_solar_system"
        android:layout_marginTop="30dp"
        android:layout_marginStart="29dp"
        android:onClick="onMarketButtonPressed"
        android:text="Market" />

    <Button
        android:id="@+id/Ship_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/text_solar_system"
        android:layout_alignParentStart="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="30dp"
        android:onClick="onShipPressed"
        android:text="Ship" />


</RelativeLayout>