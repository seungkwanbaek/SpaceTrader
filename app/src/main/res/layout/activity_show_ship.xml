<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ship"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ShowShipActivity">

    <TextView
        android:id="@+id/Shiptype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Ship"
        app:layout_constraintEnd_toStartOf="@+id/show_ship_type"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show_ship_type"
        android:layout_width="70dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/Capacity"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toEndOf="@+id/Shiptype"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Capacity"
        android:layout_width="54dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Capacity"
        app:layout_constraintStart_toEndOf="@+id/show_ship_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/Remaining"
        app:layout_constraintStart_toEndOf="@+id/Capacity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:text="@string/remaining"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/show_remaining"
        app:layout_constraintStart_toEndOf="@+id/show_capacity"
        tools:layout_editor_absoluteX="272dp" />

    <TextView
        android:id="@+id/show_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Remaining"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="682dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/Capacity"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/CargoHold"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="CargoHold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ship_resource_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            tools:listitem="@layout/resource_item_ship" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onBackPressed"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="@+id/ship_resource_list" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>